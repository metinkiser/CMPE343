<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="CinemaCenter.SessionAddUpdateController"
            prefWidth="300" prefHeight="250">

    <children>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 15;">
            <Label fx:id="lblTitle"
                   text="Add/Update Session"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <HBox spacing="10">
                <Label text="Hall:"/>
                <ComboBox fx:id="hallComboBox" prefWidth="100"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Date:"/>
                <DatePicker fx:id="datePicker" />
            </HBox>

            <HBox spacing="10">
                <Label text="Start:"/>
                <ComboBox fx:id="startTimeComboBox" prefWidth="100"/>
            </HBox>

            <HBox spacing="10">
                <Label text="End:"/>
                <ComboBox fx:id="endTimeComboBox" prefWidth="100"/>
            </HBox>

            <Button fx:id="btnSave"
                    text="Save"
                    onAction="#onSaveButtonClick"
                    style="-fx-font-weight: bold;"/>
        </VBox>
    </children>
</AnchorPane>
